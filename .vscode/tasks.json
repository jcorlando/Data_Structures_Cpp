{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build C++",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wpedantic",
                "-Wall",
                "-Wextra",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "cppbuild",
            "label": "Debug Build C++",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-g",
                "-Wpedantic",
                "-Wall",
                "-Wextra",
                "${file}",
                "-o",
                "${fileDirname}/debug/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
        }
    ],
    "version": "2.0.0"
}